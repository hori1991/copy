<header class="header-container">
  <% if logged_in? %>
    <div class="menu-wrapper">
      <div class="left-menu-wrapper">
        <div class="menu">
          <%= link_to 'Copy', root_path%>
        </div>
        </div>
        <div class="right-menu-wrapper">
          <div class="menu">
            <%= link_to 'ユーザー一覧', users_path %>
          </div>
          <div class="menu">
            <%= link_to '新規投稿', new_micropost_path %>
          </div>
          <div class="menu">
            <%= link_to '投稿一覧', microposts_path %>
          </div>
          <div class="menu">
            <%= link_to 'タグ一覧', microposts_path(tag_name: "#") %>
          </div>
          <div class="menu">
            <%= link_to "マイページ", current_user %>
          </div>
          <div class="menu">
            <%= link_to "ユーザー編集", edit_user_path(current_user) %>
          </div>
          <div class="menu">
            <%= link_to "ログアウト", logout_path, method: :delete %>
          </div>
        </div>
      </div>
  <% else %>
      <div class="menu-wrapper">
        <div class="left-menu-wrapper">
          <div class="menu">
            <%= link_to 'Copy', root_path %>
          </div>
        </div>
      </div>
  <% end %>
</header>