<h1 class="text-center">投稿編集</h1>

<div class="edit-container">
  <div class="edit-items">
    <%= form_with model: @micropost, local: true do |form| %>
    <div class="form-group">
      <%= form.label :start_time, "日付" %><br>
      <%= form.datetime_select :start_time %>
    </div>
    <div class="form-group">
      <%= form.label :title, "タイトル" %><br>
      <%= form.text_field :title, class: "form-control border border-primary" %>
    </div>
    <div class="form-group">
      <%= form.label :content, "詳細" %><br>
      <%= form.text_area :content, class: "form-control border border-primary"%>
    </div>
    <div class="form-group">
      <%= form.label :tag_list, "タグ" %><br>
      <%= form.text_field :tag_list, value: @micropost.tag_list.join(','), class: "form-control border border-primary" %>
    </div>
    <div class="form-group">
      <%= form.submit "更新する" %>
    </div>
    <% end %>
  </div>
</div>