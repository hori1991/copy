<h1 class="text-center">アカウント設定</h1>

<div class="edit-container">
  <div class="edit-items">
    <%= form_with model: @user do |form| %>
      <div class="form-group">
        <%= form.label :name, "名前" %><br>
        <%= form.text_field :name, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.label :email, "メールアドレス" %><br>
        <%= form.text_field :email, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.label :profile, "プロフィール" %><br>
        <%= form.text_area :profile,rows:5, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.label :avatar, "プロフィール画像" %><br>
        <%= form.file_field :avatar, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.label :password, "パスワード" %><br>
        <%= form.password_field :password, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation, "パスワード確認" %><br>
        <%= form.password_field :password_confirmation, class: "form-control border border-primary" %>
      </div>
      <div class="form-group">
        <%= form.submit "更新する" %>
      </div>
      <div class="form-group">
        <%= link_to "アカウント削除", @user, method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>