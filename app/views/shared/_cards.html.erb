<div class="row justify-content-center">
  <% microposts.each do |micropost| %>
    <div class="mx-2 mb-3">
      <div class="card my-2" style="width: 10rem;">
        <div class="card-image">
          <div class="d-flex flex-row m-1">
            <div class="user-image">
              <% if micropost.user.avatar.attached? %>
                <%= image_tag micropost.user.avatar %>
              <% else %>
                <%= image_tag '/assets/user_dummy.png' %>
              <% end%>
              <%= link_to micropost.user.name %>
            </div>
          </div>

          <% if micropost.images.attached? %>
            <div class="micropost-image img">
                <%= image_tag micropost.images %>
            </div>
          <% end%>

          <div class="card-body">
            <p class="card-text text-center">
              <%= link_to micropost_path(micropost) do %>
                <%= micropost.title %>
              <% end %>
            </p>
          </div>

          <div class="d-flex mb-1">
            <div class="ml-2">
              <i class="far fa-heart", style="color: #ff9aef;"></i>
              <%= micropost.likes.count %>
              <i class="far fa-comment" style="color: #6091d3;"></i>
              <%= micropost.comments.count %><br>
              <%= Date.parse(micropost.start_time.to_s).strftime("%Y年%m月%d日") %>
            </div> 
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>