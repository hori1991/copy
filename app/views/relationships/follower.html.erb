<div class="container-fluid">
  <h1 class="text-center">フォロー一覧</h1>

  <% @users.each do |user| %><br>
    <div class="box-container">
        <div class="box-menu-wrapper">
          <div class="box-feft-menu"> 
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar, size: "30x30" %>
            <% else %>
              <%= image_tag '/assets/user_dummy.png', size: "30x30" %>
            <% end%>           
              <%= link_to user.name, user %>
          </div>
          <div class="box-right-menu">
            <%= render 'relationships/follow_button', user: user %>           
          </div>
        </div>
    </div>
    <% end %>
</div>